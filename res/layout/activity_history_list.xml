<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

       <LinearLayout
        	android:id="@+id/thelist"
        	android:orientation="vertical"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_above="@+id/cancelhistory"
        	android:layout_alignParentTop="true"
        	android:layout_marginBottom="10dp"
        >
		<ListView 
		    android:id="@+id/historyListId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    ></ListView>	  
		<TextView 
		    android:id="@+id/emptyhistory"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:text="No items in history"
			android:paddingTop="15dip"
			android:paddingLeft="15dip"
			android:textSize="20sp"
			android:textColor="#666666"
		></TextView>	    	 
	</LinearLayout>
	<Button 
	    android:layout_marginTop="10sp"		 
		android:id="@+id/cancelhistory" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="Cancel" 
		android:layout_alignParentBottom="true"
	/>      
	<ImageView 
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:alpha=".11"
        	android:src="@drawable/emptymap_cropped_scaled"
        	android:padding="-100dp"
    >
        
    </ImageView>
   		 <!-- Transparent layer -->   
    <ImageView
        android:id="@+id/image_help_history_1"
        android:layout_height="160dip"
        android:layout_width="331dip"
        android:src="@drawable/help_history_1"
        android:layout_marginBottom="40dip"
        android:layout_centerInParent="true"
         />
	
 </RelativeLayout>
